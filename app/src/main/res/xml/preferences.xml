<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" android:key="mainScreen">
    <PreferenceCategory
        android:key="userCategory"
        android:title="Groups">

        <EditTextPreference
            android:key="createGroup"
            android:summary="Create a new group"
            android:title="Create Group"></EditTextPreference>

        <EditTextPreference
            android:key="joinGroup"
            android:summary="Join existing group"
            android:title="Join Group"></EditTextPreference>

    </PreferenceCategory>

    <PreferenceCategory
        android:key="userSettingsCategory"
        android:title="User Settings">

        <EditTextPreference
            android:key="username"
            android:summary="Add or edit username"
            android:title="Username"></EditTextPreference>

        <EditTextPreference
            android:key="userFirstName"
            android:summary="Add or edit first name"
            android:title="First Name"></EditTextPreference>

        <EditTextPreference
            android:key="userLastName"
            android:summary="Add or edit last name"
            android:title="Last Name"></EditTextPreference>

    </PreferenceCategory>

</PreferenceScreen>