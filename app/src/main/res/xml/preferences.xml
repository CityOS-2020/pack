<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceScreen
        android:key="preferencesParent"
        android:summary="Manage groups and users"
        android:title="Manage Groups">
        <PreferenceCategory
            android:key="userCategory"
            android:title="Create Group">
            <EditTextPreference
                android:key="userGroup"
                android:summary="Create a new group"
                android:title="Add Group"></EditTextPreference>
        </PreferenceCategory>

        <PreferenceCategory android:title="Users in your group">

            <ListPreference
                android:defaultValue="1"
                android:entries="@array/listArray"
                android:entryValues="@array/listValues"
                android:key="usersList"
                android:summary="Select the kind of data that you would like to download"
                android:title="Users in group" />
        </PreferenceCategory>

    </PreferenceScreen>

    <PreferenceCategory
        android:key="userSettingsCategory"
        android:title="User Settings">

        <EditTextPreference
            android:key="username"
            android:summary="Add or edit username"
            android:title="Username"></EditTextPreference>

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="IsActive"
            android:summary="This option if selected will allow other users to see where you are."
            android:title="Active" />
    </PreferenceCategory>

</PreferenceScreen>